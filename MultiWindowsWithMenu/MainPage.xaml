<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Main"
             x:Class="MultiWindowsWithMenu.MainPage">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Main Page Tools">
            <MenuFlyoutItem Text="Open Sub Window"
                            Clicked="MenuFlyoutItem_Clicked"/>
            <MenuFlyoutItem Text="Dummy Menu A" />
            <MenuFlyoutItem Text="Dummy Menu B" />
            <MenuFlyoutItem Text="Dummy Menu D" />
         </MenuBarItem>
    </ContentPage.MenuBarItems>

    <Grid>
        <VerticalStackLayout Spacing="10"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">
            <Button Text="New Window"
                    Clicked="NewWindowButton_Clicked"/>
            <Button Text="Alert"
                    Clicked="AlertButton_Clicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
